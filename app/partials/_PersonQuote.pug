mixin PersonQuote(avatarUrl, authorSign, more, invertHorizontal)
  - moreText = more && more.text ? more.text : 'Читать дальше';
  - moreLink = more && more.link ? more.link : '#';

  .person-quote(class=(invertHorizontal ? 'person-quote--right' : ''))
    .person-quote__avatar
      img.person-quote__image(src=avatarUrl)
    .person-quote__content
      .person-quote__body
        block
      .person-quote__footer
        .person-quote__more
          a.person-quote__link(href=moreLink) #{moreText}
        .person-quote__sign — !{authorSign}
